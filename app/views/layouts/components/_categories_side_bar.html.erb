<aside class="menu">
  <p class="menu-label">
    Categories
  </p>
  <ul class="menu-list">
    <% @all_categories.each do |category| %>
      <li>
        <%= link_to "#{category.name.gsub("_", " ").gsub("-", ",")}", "/categories/#{category.name}", class: (current_page?("/categories/#{category.name}") ? "is-active" : "") %>
        <% #" (#{category.book_count})" %>
      </li>
    <% end %>
  </ul>
</aside>
