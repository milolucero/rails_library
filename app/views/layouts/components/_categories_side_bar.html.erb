<aside class="menu">
  <p class="menu-label">
    Categories
  </p>
  <ul class="menu-list">
    <li><%= link_to "All books", root_path, class: ((current_page?(root_path) || (current_page?(books_path))) ? "is-active" : "")  %></li>
    <% @all_categories.each do |category| %>
      <li>
        <%= link_to "#{category.name.gsub("_", " ").gsub("-", ",")}", "/categories/#{category.name}", class: (current_page?("/categories/#{category.name}") ? "is-active" : "") %>
        <% #" (#{category.book_count})" %>
      </li>
    <% end %>
  </ul>
</aside>
