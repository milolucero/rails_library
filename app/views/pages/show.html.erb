<section class="section">
  <div class="container box p-6">
    <h1 class="title pl-6"><%= @page.title %></h1>
    <div class="content subtitle mt-2 pl-6 ">
      <%= @page.content.html_safe %>
    </div>
    <% if @is_contact_page %>
      <div class="columns p-6 is-vcentered">
        <div class="column is-one-third box mr-6">
          <%= render partial: 'layouts/components/contact_info' %>
        </div>
        <div class="column box ml-6">
          <%= render partial: 'layouts/components/contact_form' %>
        </div>
      </div>
      <%= render partial: 'layouts/components/map' %>
    <% end %>
  </div>
</section>
